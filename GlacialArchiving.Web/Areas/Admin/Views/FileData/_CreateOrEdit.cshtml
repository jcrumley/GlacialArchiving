@model GlacialArchiving.DataAccess.Models.FileData

@if (ViewBag.IsPost)
{
    <fieldset>
        @if (ViewBag.Errors != null)
        {
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            @foreach (string err in ViewBag.Errors)
            {
                @Html.Raw(err + "<br />")
            }
        </div>
        }
        else
        {
        <div id="EditAlert" class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>Changes saved to the database.</strong>
        </div>
        <script>
            $(function () {
                setTimeout("$(\"#EditAlert\").alert('close')", 10 * 1000);
                InitControls();
            });
        </script>
        }
    </fieldset>
}

<fieldset>
    @Html.HiddenFor(model => model.FileDataId)
    <div class="row">
        <section class="col col-6">
            @Html.jTextBoxFor(model => model.Data)
        </section>
    </div>
</fieldset>
