@model GlacialArchiving.DataAccess.Models.User

@{
    ViewBag.Title = "Create User";
}

<h2>Create</h2>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>

<div class="tabs">
    <ul>
        <li><a href="#UserTab">User</a></li>
    </ul>
    <div id="UserTab">
        @using (Html.BeginForm("Create", "Users", FormMethod.Post, new { @class = "smart-form" }))
        {
            @Html.Partial("_CreateOrEdit", Model)

            <footer>
                <button type="submit" name="submit" class="btn btn-labeled btn-primary">
                    <span class="btn-label"><i class="fa fa-save"></i></span>
                    Create
                </button>
            </footer>
        }
    </div>
</div>

