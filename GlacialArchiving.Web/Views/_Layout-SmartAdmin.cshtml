    <!-- GOOGLE FONT -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,300,400,700" />
</head>
<body class="@GlacialArchiving.Web.Common.BaseController.PageConfigurationCssClasses">
    <!-- possible classes: minified, fixed-ribbon, fixed-header, fixed-width-->
    <!-- HEADER -->
    <header id="header">
        <div id="logo-group">

            <!-- PLACE YOUR LOGO HERE -->
            <span id="logo"> <img src="/Content/SmartAdmin/img/logo.png" alt="SmartAdmin"> </span>
            <!-- END LOGO PLACEHOLDER -->
            
            @if(GlacialArchiving.Web.Common.SecureController.IsLoggedIn)
            { 
            <!-- Note: The activity badge color changes when clicked and resets the number to 0
            Suggestion: You may want to set a flag when this happens to tick off all checked messages / notifications -->
            <span id="activity" class="activity-dropdown"> <i class="fa fa-user"></i> <b class="badge"> 21 </b> </span>

            <!-- AJAX-DROPDOWN : control this dropdown height, look and feel from the LESS variable file -->
            <div class="ajax-dropdown">

                <!-- the ID links are fetched via AJAX to the ajax container "ajax-notifications" -->
                 <!-- notification content -->
                <div class="ajax-notifications custom-scroll">

                    <div class="alert alert-transparent">
                        <h4>Click a button to show messages here</h4>
                        This blank page message helps protect your privacy, or you can show the first message here automatically.
                    </div>

                    <i class="fa fa-lock fa-4x fa-border"></i>

                </div>
                <!-- end notification content -->
                <!-- footer: refresh area -->
                <span>
                    Last updated on: 12/12/2013 9:43AM
                    <button type="button" data-loading-text="Loading..." style="color:black !important;" class="btn btn-xs btn-default pull-right">
                        <i class="fa fa-refresh"></i>
                    </button>
                </span>
                <!-- end footer -->

            </div>
            <!-- END AJAX-DROPDOWN -->
            }
        </div>

        @if(GlacialArchiving.Web.Common.SecureController.IsLoggedIn)
        {
        <!-- something dropdown -->
        <div id="project-context">

            <span class="label">Something:</span>
            <span id="project-selector" class="popover-trigger-element dropdown-toggle" data-toggle="dropdown">Recent Somethings <i class="fa fa-angle-down"></i></span>

            <!-- Suggestion: populate this list with fetch and push technique -->
            <ul class="dropdown-menu">
                <li>
                    <a href="javascript:void(0);">Line item #1</a>
                </li>
                <li>
                    <a href="javascript:void(0);">Line item #2</a>
                </li>
                <li>
                    <a href="javascript:void(0);">Line item #3</a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="javascript:void(0);"><i class="fa fa-power-off"></i> Clear</a>
                </li>
            </ul>
            <!-- end dropdown-menu-->

        </div>
        <!-- end something dropdown -->
        }
   
        <!-- pulled right: nav area -->
        <div class="pull-right">

            <!-- collapse menu button -->
            <div id="hide-menu" class="btn-header pull-right">
                <span> <a href="javascript:void(0);" title="Collapse Menu"><i class="fa fa-reorder"></i></a> </span>
            </div>
            <!-- end collapse menu -->
            @if(GlacialArchiving.Web.Common.SecureController.IsLoggedIn)
            {
            <!-- logout button -->
            <div class="btn-header transparent pull-right logout">
                <span> <a href="/Account/LogOff" title="Sign Out"><i class="fa fa-sign-out"></i></a> </span>
            </div>
            <!-- end logout button -->
            }
            <!-- multiple lang dropdown : find all flags in the image folder -->
            <ul class="header-dropdown-list hidden-xs">
                <li>
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <img alt="" src="/Content/SmartAdmin/img/flags/us.png"> <span> US </span> <i class="fa fa-angle-down"></i> </a>
                    <ul class="dropdown-menu pull-right">
                        <li class="active">
                            <a href="javascript:void(0);"><img alt="" src="/Content/SmartAdmin/img/flags/us.png"> US</a>
                        </li>
                        <li>
                            <a href="javascript:void(0);"><img alt="" src="/Content/SmartAdmin/img/flags/es.png"> Spanish</a>
                        </li>
                        <li>
                            <a href="javascript:void(0);"><img alt="" src="/Content/SmartAdmin/img/flags/de.png"> German</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <!-- end multiple lang -->

        </div>
        <!-- end pulled right: nav area -->

    </header>

    <!-- Left panel : Navigation area -->
    <!-- Note: This width of the aside area can be adjusted through LESS variables -->
    <aside id="left-panel">
        @if(GlacialArchiving.Web.Common.SecureController.IsLoggedIn)
        {
        <!-- User info -->
        <div class="login-info">
            <span> <!-- User image size is adjusted inside CSS, it should stay as it --> 
                <img src="/Content/SmartAdmin/img/avatars/sunny.png" alt="me" class="online" style="display:none;" /> 
                <a href="/Admin/Users/MyAccount" id="show-shortcut-tbd">@GlacialArchiving.Web.Common.SecureController.UserName <i style="display:none;" class="fa fa-angle-down"></i></a> 
            </span>
        </div>
        <!-- end user info -->
        }
        
        <!-- NAVIGATION : This navigation is also responsive
        To make this navigation dynamic please make sure to link the node
        (the reference to the nav > ul) after page load. Or the navigation
        will not initialize.
        -->
        <nav class="replaceMe">
            <!-- NOTE: Notice the gaps after each icon usage <i></i>..
            Please note that these links work a bit different than
            traditional href="" links. See documentation for details.
            -->

            <ul>

            </ul>
        </nav>
        <span class="minifyme"> <i class="fa fa-arrow-circle-left hit"></i> </span>

    </aside>
    <!-- END NAVIGATION -->

    <!-- Main Core div-->
    <div class="" id="main" role="main">
        <!-- RIBBON -->
        <div id="ribbon">
            @if (GlacialArchiving.Web.Common.SecureController.IsLoggedIn && ViewBag.Breadcrumbs != null)
            {
            <!-- breadcrumb -->
            <ol class="breadcrumb">
                <li>Home</li>
                @foreach(string breadcrumb in ViewBag.Breadcrumbs)
                { 
                <li>@breadcrumb</li>
                }
            </ol>
            <!-- end breadcrumb -->
            }
        </div>
        <!-- END RIBBON -->

        <!-- Content -->
        <div class="container-fluid">
            <div id="content" class="row">
                @RenderSection("featured", required: false)
                @RenderBody()
            </div>
        </div>
        <!-- END Content -->

        <hr />

        <!-- Footer -->
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year</p>
                </div>
            </div>
        </footer>
        <!-- END Footer -->
    </div>
    <!-- END Main Core div -->
 
    <!-- SHORTCUT AREA : With large tiles (activated via clicking user name tag)
    Note: These tiles are completely responsive,
    you can add as many as you like
    -->
    <div id="shortcut">
        <ul>
            <li>
                <a href="javascript:void(0);" class="jarvismetro-tile big-cubes bg-color-blue"> <span class="iconbox"> <i class="fa fa-envelope fa-4x"></i> <span>Information <span class="label pull-right bg-color-darken">14</span></span> </span> </a>
            </li>
            <li>
                <a href="javascript:void(0);" class="jarvismetro-tile big-cubes bg-color-orangeDark"> <span class="iconbox"> <i class="fa fa-calendar fa-4x"></i> <span>Other</span> </span> </a>
            </li>
            <li>
                <a href="javascript:void(0);" class="jarvismetro-tile big-cubes bg-color-purple"> <span class="iconbox"> <i class="fa fa-map-marker fa-4x"></i> <span>Good News</span> </span> </a>
            </li>
            <li>
                <a href="javascript:void(0);" class="jarvismetro-tile big-cubes bg-color-blueDark"> <span class="iconbox"> <i class="fa fa-book fa-4x"></i> <span>Bills <span class="label pull-right bg-color-darken">99</span></span> </span> </a>
            </li>
            <li>
                <a href="javascript:void(0);" class="jarvismetro-tile big-cubes bg-color-greenLight"> <span class="iconbox"> <i class="fa fa-picture-o fa-4x"></i> <span>Anything You Want </span> </span> </a>
            </li>
            <li>
                <a href="javascript:void(0);" class="jarvismetro-tile big-cubes selected bg-color-pinkDark"> <span class="iconbox"> <i class="fa fa-user fa-4x"></i> <span>My Profile </span> </span> </a>
            </li>
        </ul>
    </div>
    <!-- END SHORTCUT AREA -->

    <script type="text/javascript" src="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/Scripts/jquery-2.0.3.min.js")"></script>
    <script type="text/javascript" src="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/Scripts/moment-2.4.0.js")"></script>
    <script type="text/javascript" src="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/Scripts/jquery-ui-1.10.4.custom.min.js")"></script>
    <script type="text/javascript" src="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/Scripts/bootstrap.min.js")"></script>
    <script type="text/javascript" src="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/Scripts/bootstrap-select.min.js")"></script>
    <script type="text/javascript" src="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/Scripts/bootstrap-datetimepicker.js")"></script>
    <script type="text/javascript" src="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/Scripts/jquery.dataTables.min.js")"></script>
    <script type="text/javascript" src="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/Scripts/jquery.handsontable.js")"></script>
    <script type="text/javascript" src="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/Scripts/jquery.contextMenu.js")"></script>
    <script type="text/javascript" src="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/Scripts/jHtmlArea-0.7.5.min.js")"></script>
    <script type="text/javascript" src="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/Scripts/jHtmlArea.ColorPickerMenu-0.7.0.min.js")"></script>
    <script type="text/javascript" src="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/Scripts/Functions.generated.js")"></script>
    <script type="text/javascript" src="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/Scripts/Functions.js")"></script>

    <!-- <script src="js/plugin/jquery-touch/jquery.ui.touch-punch.min.js"></script> --> <!-- JS TOUCH : include this plugin for mobile drag / drop touch events -->
    <script src="/Content/SmartAdmin/js/notification/SmartNotification.min.js"></script> <!-- CUSTOM NOTIFICATION -->
    <script src="/Content/SmartAdmin/js/smartwidgets/jarvis.widget.min.js"></script> <!-- JARVIS WIDGETS -->
    <script src="/Content/SmartAdmin/js/plugin/easy-pie-chart/jquery.easy-pie-chart.min.js"></script> <!-- EASY PIE CHARTS -->
    <script src="/Content/SmartAdmin/js/plugin/sparkline/jquery.sparkline.min.js"></script> <!-- SPARKLINES -->
    <script src="/Content/SmartAdmin/js/plugin/jquery-validate/jquery.validate.min.js"></script> <!-- JQUERY VALIDATE -->
    <script src="/Content/SmartAdmin/js/plugin/masked-input/jquery.maskedinput.min.js"></script> <!-- JQUERY MASKED INPUT -->
    <script src="/Content/SmartAdmin/js/plugin/select2/select2.min.js"></script> <!-- JQUERY SELECT2 INPUT -->
    <script src="/Content/SmartAdmin/js/plugin/bootstrap-slider/bootstrap-slider.min.js"></script> <!-- JQUERY UI + Bootstrap Slider -->
    <script src="/Content/SmartAdmin/js/plugin/msie-fix/jquery.mb.browser.min.js"></script> <!-- browser msie issue fix -->
    <script src="/Content/SmartAdmin/js/plugin/smartclick/smartclick.js"></script> <!-- SmartClick: For mobile devices -->

    <!-- Page Scripts -->
    @RenderSection("pageScripts", required: false)
    <!-- /Page Scripts -->

