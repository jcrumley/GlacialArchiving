    <link type="text/css" rel="stylesheet" href="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/SmartAdmin/css/bootstrap.min.css")" />
    <link type="text/css" rel="stylesheet" href="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/SmartAdmin/css/font-awesome.min.css")" />

    <!-- SmartAdmin Styles : Please note (smartadmin-production.css) was created using LESS variables -->
    <link type="text/css" rel="stylesheet" href="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/SmartAdmin/css/smartadmin-production.css")" />
    <link type="text/css" rel="stylesheet" href="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/SmartAdmin/css/smartadmin-skins.css")" />

    <!-- Demo purpose only: goes with demo.js, you can delete this css when designing your own WebApp -->
    <!-- <link rel="stylesheet" type="text/css" media="screen" href="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/SmartAdmin/css/demo.css")" /> -->
    
    <link type="text/css" rel="stylesheet" href="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/Styles/bootstrap-select.css")" />
    <link type="text/css" rel="stylesheet" href="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/Styles/bootstrap-datetimepicker.min.css")" />
    <link type="text/css" rel="stylesheet" href="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/Styles/jquery.handsontable.css")" />
    <link type="text/css" rel="stylesheet" href="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/Styles/jHtmlArea.css")" />
    <link type="text/css" rel="stylesheet" href="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/Styles/jHtmlArea.ColorPickerMenu.css")" />
    <link type="text/css" rel="stylesheet" href="@TBADev.MVC.Tools.Utilities.UrlVersioning("/Content/Styles/Site.generated.css")" />
